<div class="container mt-4">
  <h1>Contact Edit</h1>

  <form action="/contact/update" method="post">
    <div>
      <input type="hidden" name="oldName" value="<%= data.name %>" />
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="name" class="form-control" value="<%= data.name %>" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" value="<%= data.email %>" />
      </div>
      <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="number" name="phone" class="form-control" value="<%= data.phone %>" required />
      </div>
    </div>
    <div class="modal-footer">
      <a href="/contact" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary ms-2">Update</button>
    </div>
  </form>
</div>
